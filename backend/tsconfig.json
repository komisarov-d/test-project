{
	"compilerOptions": {
		"declaration": true,
		"target": "ES2019",
		"module": "commonjs",
		"pretty": true,
		"sourceMap": true,
		"outDir": "build",
    "baseUrl": "./src",
		"preserveSymlinks": true,
		"importHelpers": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": ["node", "jest"],
		"lib": ["es2020", "dom", "es2017"],
		"typeRoots": ["./src/typings", "./node_modules/@types", "./src/common/@types/express"]
	},
	"include": ["./src/**/*", "knexfile.ts", "./tests/**/*", "**/*.config.js"]
}
